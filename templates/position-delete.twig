{% extends "frame.twig" %}

{% block main %}
<h2>{{ trans('heading') }}</h2>

<p>{{ trans('error-msg', {'position': position.getTitle(), 'skills': sport.getSkillPluralLabel()}) }}</p>

<ul>
	{% for skill in skills %}
	<li><a href="{{ url_pattern|replace({'_skill_': skill.getSlug()}) }}">{{ skill.getName() }}</a></li>
	{% endfor %}
</ul>
{% endblock %}