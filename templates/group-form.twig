{% extends 'frame.twig' %}

{% block actions %}
{% if group.getId() %}
<a href="{{ delete_url }}" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
<a href="{{ edit_url }}" class="btn btn-default active" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
{% endif %}
{% endblock %}

{% block main %}
<h2>{{ trans('heading', {'group': sport.getGroupLabel()}) }}</h2>

<form class="form-horizontal" action="{{ global.locations.uri }}" method="post">
<input type="hidden" name="redirect" value="{{ redirect }}">

	<div class="form-group">
		<label class="col-sm-2 control-label" for="title">{{ trans('title') }}</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" id="title" name="title" required value="{{ group.getTitle() }}">
		</div>
	</div>
	
	<div class="form-group">
		<label class="col-sm-2 control-label" for="slug">{{ trans('slug') }}</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" id="slug" name="slug" value="{{ group.getSlug() }}" placeholder="{{ trans('slug-placeholder') }}">
		</div>
	</div>
	
	<div class="form-group">
		<label class="col-sm-2 control-label" for="desc">{{ trans('description') }}</label>
		<div class="col-sm-6">
			<textarea class="form-control" id="desc" name="description" required>{{ group.getDescription() }}</textarea>
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-sm-6 col-sm-offset-2">
			<input type="submit" class="btn btn-primary form-control" value="{{ trans('save') }}">
		</div>
	</div>
</form>
{% endblock %}