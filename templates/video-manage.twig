{% extends 'toolbar.twig' %}

{% block breadcrumb %}
{{ parent() }}
<a href="{{ skill_url }}">{{ skill.getName() }}</a> &gt;
{{ trans('manage-videos') }}
{% endblock %}


{% block main %}
<h2>{{ trans('manage-videos') }}</h2>

<table class="table table-condensed">
	<thead>
		<tr>
			<th>{{ trans('title') }}</th>
			<th>{{ trans('actions') }}</th>
		</tr>
	</thead>
	<tbody>
	{% for video in videos %}
		<tr>
			<td>{{ video.getTitle() }}</td>
			<td>
				<a href="{{ edit_url_pattern|replace({'_id': video.getId()})  }}" class="btn btn-primary btn-xs">
					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
				</a>
				<a href="{{ delete_url_pattern|replace({'_id': video.getId()})  }}" class="btn btn-danger btn-xs">
					<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
				</a>
			</td>
		</tr>
	{% endfor %}
	</tbody>
</table>

{% endblock %}