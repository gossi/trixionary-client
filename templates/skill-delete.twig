{% extends "frame.twig" %}

{% block breadcrumb %}
{{ parent() }}
<a href="{{ skill_url }}">{{ skill.getName() }}</a> &gt;
{{ trans('heading', {'skill': sport.getSkillLabel()}) }}
{% endblock %}

{% block main %}
<h2>{{ trans('heading', {'skill': sport.getSkillLabel()}) }}</h2>

<p>{{ trans('error-msg', {'skill': '<b>'~skill.getName()~'</b>', 'skills': sport.getSkillPluralLabel()})|raw }}</p>

<ul>
	{% for skill in skills %}
	<li><a href="{{ url_pattern|replace({'_skill_': skill.getSlug()}) }}">{{ skill.getName() }}</a></li>
	{% endfor %}
</ul>
{% endblock %}