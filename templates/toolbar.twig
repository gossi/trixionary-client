{% set extendedAccess = permissions.picture_create or permissions.video_create or permissions.reference_create %}
{% extends 'frame.twig' %}

{% block actions %}
{% if skill.getId() %}
{% set showDelete = showDelete ?: false %}
{% if permissions.skill_delete and showDelete %}
<a href="{{ delete_url }}" class="btn btn-danger{% if active == 'delete' %} active{% endif %}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
{% endif %}
{% set manageAccess = permissions.pictures or permissions.videos or permissions.references %}
{% if manageAccess or permissions.skill_edit %}
<div class="btn-group" role="group">
{% if permissions.skill_edit %}
<a href="{{ edit_url }}" class="btn btn-default{% if active == 'edit' %} active{% endif %}" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
{% endif %}
{% if manageAccess %}
<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
</button>
<ul class="dropdown-menu" role="menu">
	{% if permissions.pictures %}<li><a href="{{ manage_pictures_url }}">{{ trans('manage-pictures') }}</a></li>{% endif %}
	{% if permissions.videos %}<li><a href="{{ manage_videos_url }}">{{ trans('manage-videos') }}</a></li>{% endif %}
	{% if permissions.references %}<li><a href="{{ manage_references_url }}">{{ trans('manage-references') }}</a></li>{% endif %}
</ul>
{% endif %}
</div>
{% endif %}
{% endif %}
{% endblock %}

{% block create %}
{% if skill.getId() %}
{% if createAccess %}<li class="divider"></li>{% endif %}
{% if permissions.picture_create %}<li><a href="{{ create_picture_url }}">{{ trans('create-picture') }}</a></li>{% endif %}
{% if permissions.video_create %}<li><a href="{{ create_video_url }}">{{ trans('create-video') }}</a></li>{% endif %}
{% if permissions.reference_create %}<li><a href="{{ create_reference_url }}">{{ trans('create-reference') }}</a></li>{% endif %}
{% endif %}
{% endblock %}