{% macro detail(skills, context) %}
<ul class="media-list">
	{% for skill in skills %}
	{% if not skill.getVariationOfId() and not skill.getMultipleOfId() %}
	<li class="media">
		{% set thumb = getSkillThumbUrl(skill) %}
		{% if thumb is not null %}
		<a class="media-left media-preview" href="{{ context.url_pattern|replace({'_skill_': skill.getSlug()}) }}">
			<img src="{{ thumb }}" class="preview">
		</a>
		{% endif %}
		<div class="media-body">
			<a href="{{ context.url_pattern|replace({'_skill_': skill.getSlug()}) }}">
				<h3 class="media-heading">{{ skill.getName() }}</h3>
			</a>
			<p>{{ skill.getDescription() }}</p>
			
			{% if skill.getVariations().count() %}
			<p><b>{{ trans('variations') }}: </b>
				{% for s in skill.getVariations() %}
				<a href="{{ context.url_pattern|replace({'_skill_': s.getSlug()}) }}">{{ s.getName() }}</a>{% if not loop.last %}, {% endif %}
				{% endfor %}
			</p>
			{% endif %}
			
			{% if skill.getMultiples().count() %}
			<p><b>{{ trans('multiples') }}: </b>
				{% for s in skill.getMultiples() %}
				<a href="{{ context.url_pattern|replace({'_skill_': s.getSlug()}) }}">{{ s.getName() }}</a>{% if not loop.last %}, {% endif %}
				{% endfor %}
			</p>
			{% endif %}
		</div>
	</li>
	{% endif %}
	{% endfor %}
</ul>
{% endmacro %}

