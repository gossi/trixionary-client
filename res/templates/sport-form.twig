	<fieldset>
		<legend>Features</legend>
		<div class="form-group">
			<label class="col-md-2 control-label">Features</label>
			<div class="col-md-6">
				<div class="checkbox">
    				<label>
    					<input type="checkbox" name="feature-composition" value="1"{% if sport.getIsFeatureComposition() %} checked{% endif %}> Composition
    				</label>
				</div>
				<div class="checkbox">
    				<label>
    					<input type="checkbox" name="feature-tester" value="1"{% if sport.getIsFeatureTester() %} checked{% endif %}> Tester
    				</label>
    			</div>
			</div>
		</div>
	</fieldset>
	
	<div class="form-group">
		<div class="col-md-6 col-md-offset-2">
			<input type="submit" class="btn btn-primary form-control" value="Save">
		</div>
	</div>
