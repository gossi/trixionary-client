<h2>{{if reference.isNew (t "add") (t "edit")}} {{t "reference"}}</h2>

<form class="form-horizontal" {{action "save" on="submit"}}>
	<div class="form-group">
		<label for="inputName" class="col-sm-2 control-label">{{t "name"}}</label>
		<div class="col-sm-6">
			{{#power-select
				options=types
				selected=type
				searchEnabled=false
				renderInPlace=true
				onchange=(action (mut type))
				onkeydown=(action "handleKeydown")
				as |type|}}
				{{t type}}
			{{/power-select}}
		</div>
	</div>

	{{#if isTitle}}
	<div class="form-group" id="title-group">
		<label class="col-sm-2 control-label" for="title">{{t "title"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="title" name="title" value=reference.title required=isTitleRequired}}
		</div>
	</div>
	{{/if}}

	{{#if isAuthor}}
	<div class="form-group" id="author-group">
		<label class="col-sm-2 control-label" for="author">{{t "authors"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="author" name="author" value=reference.author required=isAuthorRequired}}
			<small class="help-block">{{t "authors.explanation"}}</small>
		</div>
	</div>
	{{/if}}

	{{#if isBooktitle}}
	<div class="form-group" id="booktitle-group">
		<label class="col-sm-2 control-label" for="booktitle">{{t "booktitle"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="booktitle" name="booktitle" value=reference.booktitle required=isBooktitleRequired}}
		</div>
	</div>
	{{/if}}

	{{#if isYear}}
	<div class="form-group" id="year-group">
		<label class="col-sm-2 control-label" for="year">{{t "year"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="year" name="year" value=reference.year required=isYearRequired}}
		</div>
	</div>
	{{/if}}

	{{#if isPublisher}}
	<div class="form-group" id="publisher-group">
		<label class="col-sm-2 control-label" for="publisher">{{t "publisher"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="publisher" name="publisher" value=reference.publisher required=isPublisherRequired}}
		</div>
	</div>
	{{/if}}

	{{#if isAddress}}
	<div class="form-group" id="address-group">
		<label class="col-sm-2 control-label" for="address">{{t "address"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="address" name="address" value=reference.address required=isAddressRequired}}
		</div>
	</div>
	{{/if}}

	{{#if isJournal}}
	<div class="form-group" id="journal-group">
		<label class="col-sm-2 control-label" for="journal">{{t "journal"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="journal" name="journal" value=reference.journal required=isJournalRequired}}
		</div>
	</div>
	{{/if}}

	{{#if isSchool}}
	<div class="form-group" id="school-group">
		<label class="col-sm-2 control-label" for="school">{{t "school"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="school" name="school" value=reference.school required=isSchoolRequired}}
		</div>
	</div>
	{{/if}}

	{{#if isEditor}}
	<div class="form-group" id="editor-group">
		<label class="col-sm-2 control-label" for="editor">{{t "editors"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="editor" name="editor" value=reference.editor required=isEditorRequired}}
			<small class="help-block">{{t "authors.explanation"}}</small>
		</div>
	</div>
	{{/if}}

	{{#if isVolume}}
	<div class="form-group" id="volume-group">
		<label class="col-sm-2 control-label" for="volume">{{t "volume"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="volume" name="volume" value=reference.volume required=isVolumeRequired}}
		</div>
	</div>
	{{/if}}

	{{#if isNumber}}
	<div class="form-group" id="number-group">
		<label class="col-sm-2 control-label" for="number">{{t "number"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="number" name="number" value=reference.number required=isNumberRequired}}
		</div>
	</div>
	{{/if}}

	{{#if isEdition}}
	<div class="form-group" id="edition-group">
		<label class="col-sm-2 control-label" for="edition">{{t "edition"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="edition" name="edition" value=reference.edition required=isEditorRequired}}
		</div>
	</div>
	{{/if}}

	{{#if isPages}}
	<div class="form-group" id="pages-group">
		<label class="col-sm-2 control-label" for="pages">{{t "pages"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="pages" name="pages" value=reference.pages required=isPagesRequired}}
		</div>
	</div>
	{{/if}}

	{{#if isHowpublished}}
	<div class="form-group" id="howpublished-group">
		<label class="col-sm-2 control-label" for="howpublished">{{t "howpublished"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="howpublished" name="howpublished" value=reference.howpublished required=isHowpublishedRequired}}
		</div>
	</div>
	{{/if}}

	{{#if isNote}}
	<div class="form-group" id="note-group">
		<label class="col-sm-2 control-label" for="note">{{t "note"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="note" name="note" value=reference.note required=isNoteRequired}}
		</div>
	</div>
	{{/if}}

	{{#if isUrl}}
	<div class="form-group" id="url-group">
		<label class="col-sm-2 control-label" for="url">{{t "url"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="url" name="url" value=reference.url required=isUrlRequired}}
		</div>
	</div>
	{{/if}}

	{{#if isLastchecked}}
	<div class="form-group" id="lastchecked-group">
		<label class="col-sm-2 control-label" for="lastchecked">{{t "lastchecked"}}</label>
		<div class="col-sm-6">
			{{input class="form-control" id="lastchecked" name="lastchecked" value=reference.lastchecked required=isLastcheckedRequired}}
		</div>
	</div>
	{{/if}}

	<div class="form-group">
		<div class="col-sm-6 col-sm-offset-2">
			{{save-button isSaving=isSaving}}
		</div>
	</div>
</form>
